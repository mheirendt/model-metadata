{
    "name": "@mheirendt/model-metadata",
    "version": "1.0.0",
    "description": "An isomorphic validation and rules engine library",
    "main": "dist/js/index.js",
    "module": "dist/es/index.js",
    "types": "dist/js/index.d.ts",
    "scripts": {
        "prepare": "npm-run-all prepare:*",
        "prepare:clean": "rimraf dist",
        "prepare:es": "tsc --outDir dist/es --module esnext --declaration false",
        "prepare:js": "tsc",
        "js:watch": "tsc -watch",
        "coverage": "jest --coverage",
        "test": "jest",
        "watch": "jest --watch --onlyChanged",
        "lint": "eslint . --fix",
        "docs": "typedoc"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mheirendt/model-metadata"
    },
    "keywords": [
        "validation",
        "rules engine",
        "metadata"
    ],
    "author": "Michael Heirendt",
    "license": "ISC",
    "dependencies": {
        "inversify": "^5.0.5",
        "json-pointer": "^0.6.1",
        "json-rules-engine": "^5.3.0",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "reflect-metadata": "^0.1.13",
        "selectn": "^1.1.2"
    },
    "devDependencies": {
        "@types/jest": "^26.0.20",
        "@types/json-pointer": "^1.0.30",
        "@types/lodash": "^4.14.168",
        "@types/node": "^14.14.32",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.17.0",
        "eslint": "^7.21.0",
        "eslint-plugin-jest": "^23.18.0",
        "eslint-plugin-tsdoc": "^0.2.11",
        "jest": "^26.6.3",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.5.3",
        "typescript": "^4.2.3"
    },
    "files": [
        "dist",
        "README.md"
    ]
}
